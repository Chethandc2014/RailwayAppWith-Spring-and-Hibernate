<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.url">jdbc:h2:tcp://localhost/~/INDIAN_RAILWAYS</property>
		<property name="driverClassName">org.h2.Driver</property>
		<property name="hibernate.connection.username">sa</property>
		<property name="hibernate.connection.password">sa</property>
		<property name="hibernate.hbm2ddl.auto">create-update</property>
		<property name="hibernate.dialect"> org.hibernate.dialect.H2Dialect</property>
		<property name="show_sql">true</property>
		<property name="format_sql">true</property>
		<property name="use_sql_comments">true</property>
		<mapping class="com.irc.entity.Booking" />
		<mapping class="com.irc.entity.Coach" />
		<mapping class="com.irc.entity.CoachType" />
		<mapping class="com.irc.entity.District" />
		<mapping class="com.irc.entity.Passenger" />
		<mapping class="com.irc.entity.PassengerAddress" />
		<mapping class="com.irc.entity.PassengerBookingHistory" />
		<mapping class="com.irc.entity.PnrStatus" />
		<mapping class="com.irc.entity.Route" />
		<mapping class="com.irc.entity.SeatCharges" />
		<mapping class="com.irc.entity.SeatType" />
		<mapping class="com.irc.entity.State" />
		<mapping class="com.irc.entity.Station" />
		<mapping class="com.irc.entity.Taluk" />
		<mapping class="com.irc.entity.Train" />
		<mapping class="com.irc.entity.TrainSchedule" />
		<mapping class="com.irc.entity.TrainStatus" />
		<mapping class="com.irc.entity.TrainWeeklySchedule" />
		<mapping class="com.irc.entity.RouteStation" />
		<mapping class="com.irc.entity.RouteTrain" />
		<mapping class="com.irc.entity.RouteTrainId" />
		
	</session-factory>
</hibernate-configuration>
