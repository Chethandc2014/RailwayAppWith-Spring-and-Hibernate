<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
		<property name="hibernate.connection.password">INDIAN_RAILWAYS</property>
		<property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:xe</property>
		<property name="hibernate.connection.username">INDIAN_RAILWAYS</property>
		<property name="show_sql">true</property>
		<property name="format_sql">true</property>
		<property name="use_sql_comments">true</property>
		<property name="hibernate.dialect"> org.hibernate.dialect.OracleDialect</property>
		<mapping class="com.irc.model.SeatType" /> <!-- use file attribute for hbm file -->
		<mapping class="com.irc.model.Coach" />
		<mapping class="com.irc.model.CoachType" />
		<mapping class="com.irc.model.District" />
		<mapping class="com.irc.model.Passenger" />
		<mapping class="com.irc.model.PassengerAddress" />
		<mapping class="com.irc.model.PassengerBookingDetails" />
		<mapping class="com.irc.model.PnrStatus" />
		<mapping class="com.irc.model.SeatCharges" />
		<mapping class="com.irc.model.State" />
		<mapping class="com.irc.model.Station" />
		<mapping class="com.irc.model.StationTrains" />
		<mapping class="com.irc.model.Taluk" />
		<mapping class="com.irc.model.TrainCoaches" />
		<mapping class="com.irc.model.TrainCoachSeatBooking" />
		<mapping class="com.irc.model.Trains" />
		<mapping class="com.irc.model.TrainStatus" />
	</session-factory>
</hibernate-configuration>
